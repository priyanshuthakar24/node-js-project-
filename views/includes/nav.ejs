<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a href="/" class="<%= path === '/' ?'active' : ''%>">Shop</a>
            </li>
            <li class="main-header__item">
                <a href="/products" class="<%= path === '/products' ?'active' : ''%>">Products</a>
            </li>
            <% if(isAuthenticated){%>
                <li class="main-header__item">
                    <a href="/orders" class="<%= path === '/order' ?'active' : ''%>">order</a>
                </li>
                <li class="main-header__item">
                    <a href="/cart" class="<%= path === '/cart' ?'active' : ''%>">Cart</a>
                </li>
                <li class="main-header__item">
                    <a href="/admin/product-list" class="<%= path === '/admin/product-list' ?'active' : ''%>">Admin
                        Products</a>
                </li>
                <li class="main-header__item">
                    <a href="/admin/add-product"
                        class="<%= path === '/admin/add-product' ?'active' : ''%>">Add-product</a>
                </li>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" id="" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
                <%}else{%>
                    
                    <li class="main-header__item">
                        <a href="/login">Login</a>
                    </li>
                    <li class="main-header__item">
                        <a href="/signup">sign up</a>
                    </li>
                    
                    <%}%>
        </ul>
        <ul class="main-header__item-list">
        </ul>
    </nav>
</header>