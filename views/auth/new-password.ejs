<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/add-product.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/nav.ejs')%>
            <main>
                <% if(errorMessage){%>
                    <%= errorMessage%>
                        <%}%>
                            <form class="login-form" action="/new-password" method="POST">

                                <div class="form-control">
                                    <label for="imageUrl">Password</label>
                                    <input type="password" name="password" id="password">
                                </div>
                                <button type="submit" class="btn">
                                    <input type="hidden" name="userid" id="" value="<%= userid %>">
                                    <input type="hidden" name="passwordtoken" id="" value="<%= passwordtoken %>">
                                    <input type="hidden" name="_csrf" id="" value="<%= csrfToken %>">
                                    Login
                                </button>
                            </form>

            </main>
            <%- include('../includes/end.ejs')%>