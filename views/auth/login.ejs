    <body>
        <%- include('../includes/nav.ejs')%>
            <main>
                <% if(errorMessage){%>
                    <%= errorMessage%>
                        <%}%>
                            <form class="login-form" action="/login" method="POST">
                                <div class="form-control">
                                    <label for="email">E-Mail</label>
                                    <input type="email" name="email">
                                </div>
                                <div class="form-control">
                                    <label for="imageUrl">Password</label>
